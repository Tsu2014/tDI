<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/main_textview1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="Hello World!"
        app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/main_textview1"
        android:orientation="vertical">
        <Button
            android:id="@+id/main_button1"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:text="button1"/>
        <Button
            android:id="@+id/main_button2"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:text="button2"/>
        <Button
            android:id="@+id/main_button3"
            android:layout_height="90dp"
            android:layout_width="match_parent"
            android:text="button3"/>
        <Button
            android:id="@+id/main_button4"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:text="button4"/>
        <WebView
            android:id="@+id/main_webview1"
            android:layout_width="match_parent"
            android:layout_height="500dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>